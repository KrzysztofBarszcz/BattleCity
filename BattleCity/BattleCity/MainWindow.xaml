<Window x:Name="mainWindow" x:Class="BattleCity.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Battle City" Loaded="mainWindow_Loaded" KeyDown="mainWindow_KeyDown" VerticalAlignment="Top" SizeToContent="WidthAndHeight" ResizeMode="NoResize" KeyUp="mainWindow_KeyUp" >
	<StackPanel Orientation="Horizontal" Margin="5">
		<Canvas x:Name="mainCanvas" Width="416" Height="416" Background="Black"/>
		<StackPanel x:Name="playerOneLifesTextBox" Width="100" Orientation="Vertical">
			<Label x:Name="playerOneLabel" Content="Player 1:"/>
			<Label x:Name="playerOnePointsLabel" Content="Points: 0"/>
			<Label x:Name="playerOneLifesLabel" Content="Lifes: 2"/>

			<Label x:Name="playerTwoLabel" Content="Player 2:"/>
			<Label x:Name="playerTwoPointsLabel" Content="Points: 0"/>
			<Label x:Name="playerTwoLifesLabel" Content="Lifes: 2"/>
		</StackPanel>
	</StackPanel>
</Window>
